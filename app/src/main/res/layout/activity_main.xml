<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageMain"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/buttonAttractions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image" />

    <TextView
        android:id="@+id/textItaly"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ITALY"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textRome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textRome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ROME"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textIsA..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textItaly"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textIsA..."
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="IS A HiSTORICAL POWERHOUSE"
        app:layout_constraintVertical_chainStyle="packed"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRome" />

    <TextView
        android:id="@+id/textLocalTime"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Local time"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textAM"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="@+id/textDate"/>

    <TextView
        android:id="@+id/textAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:23 AM"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textDate"
        app:layout_constraintBottom_toTopOf="@+id/textDate"/>

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19/09/2019"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageMain"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textToday"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginBottom="64dp"
        android:text="TODAY"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text2C"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="-2ÂºC"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textToday" />

    <TextView
        android:id="@+id/textScatteredCloud"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Scattered cloud"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2C"/>

    <Button
        android:id="@+id/buttonAttractions"
        android:layout_width="0dp"
        android:layout_height=""
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonNeedToKnow"
        app:layout_constraintTop_toBottomOf="@+id/imageMain"/>

    <ImageView
        android:id="@+id/imageAttractions"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonAttractions"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/buttonAttractions"
        app:layout_constraintTop_toTopOf="@+id/buttonAttractions"
        app:srcCompat="@drawable/location" />

    <TextView
        android:id="@+id/textAttractions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attractions"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/buttonAttractions"
        app:layout_constraintEnd_toEndOf="@+id/buttonAttractions"
        app:layout_constraintStart_toStartOf="@+id/buttonAttractions"
        app:layout_constraintTop_toTopOf="@+id/buttonAttractions" />

    <Button
        android:id="@+id/buttonNeedToKnow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonMore"
        app:layout_constraintTop_toBottomOf="@+id/imageMain"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/buttonAttractions" />

    <ImageView
        android:id="@+id/imageNeedToKnow"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonNeedToKnow"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/buttonNeedToKnow"
        app:layout_constraintTop_toTopOf="@+id/buttonNeedToKnow"
        app:srcCompat="@drawable/xmlid_205" />

    <TextView
        android:id="@+id/textNeedToKnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Need To Know"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/buttonNeedToKnow"
        app:layout_constraintEnd_toEndOf="@+id/buttonNeedToKnow"
        app:layout_constraintStart_toStartOf="@+id/buttonNeedToKnow"
        app:layout_constraintTop_toTopOf="@+id/buttonNeedToKnow" />

    <Button
        android:id="@+id/buttonMore"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonNeedToKnow"
        app:layout_constraintTop_toBottomOf="@+id/imageMain"/>

    <ImageView
        android:id="@+id/imageMore"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonMore"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/buttonMore"
        app:layout_constraintTop_toTopOf="@+id/buttonMore"
        app:srcCompat="@drawable/xmlid_943" />

    <TextView
        android:id="@+id/textMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/buttonMore"
        app:layout_constraintEnd_toEndOf="@+id/buttonMore"
        app:layout_constraintStart_toStartOf="@+id/buttonMore"
        app:layout_constraintTop_toTopOf="@+id/buttonMore" />

</androidx.constraintlayout.widget.ConstraintLayout>